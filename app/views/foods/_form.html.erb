<%= render "layouts/errors", :object => @food %>

<%= form_for @food, html: { multipart: true } do |f| %>
  <%= f.label :name %>:
  <br>
  <%= f.text_field :name %><br />

  <%= f.label :address %>:
  <br>
  <%= f.text_field :address %><br />

  <%= f.label :yelp %>:
  <br>
  <%= f.text_field :yelp %>
	<br>
	<br>
	<%= f.text_field :bio, placeholder: "Add biography" %>
  <br>
  <br>
  <%= f.label :image %>: Cover Photo
  <%= f.file_field :image %>
  <br>
  <%= f.label :pictures %>: Gallery
  <%= f.fields_for :pictures do |picture_fields| %>
  <p>
    <%= picture_fields.file_field :image %>
  </p>
  <% end %>
  <%= f.label :categories %>: Category
  <%= f.fields_for :categories do |category_fields| %>
  <p>
    <%= category_fields.text_field :name %>
  </p>
  <% end %>

  <%= f.submit %>
<% end %>
