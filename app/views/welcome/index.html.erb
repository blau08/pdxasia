    </div>
    <% end %>
  </div>
  <div class="row">
    <h4>Community</h4>
    <% @communities.each do |community| %>
    <div class="col-md-3 col-width-15 welcome-item-height col-xs-3">
      <a href="#">
        <img class="img-responsive">
        <%= link_to community_path(community) do %>
          <%= image_tag(community.image.url(:small), class: "card-width-11") %>
        <% end %>
