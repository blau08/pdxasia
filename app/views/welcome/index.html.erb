<div class="container">
  <div class="row">
    <h4>Food</h4>
    <% @foods.each do |food| %>
    <div class="col-md-3 col-width-15 welcome-item-height col-xs-3">
      <a href="#">
        <img class="img-responsive">
        <%= link_to food_path(food) do %>
          <%= image_tag(food.image.url(:small), class: "card-width-11") %>
        <% end %>
      </a>
      <h4>
        <a>
          <%= link_to food.name, food_path(food) %>
        </a>
      </h4>
    </div>
    <% end %>
  </div>
  <div class="row">
    <h4>Shop</h4>
    <% @shops.each do |shop| %>
    <div class="col-md-3 col-width-15 welcome-item-height col-xs-3">
      <a href="#">
        <img class="img-responsive">
        <%= link_to shop_path(shop) do %>
          <%= image_tag(shop.image.url(:small), class: "card-width-11") %>
